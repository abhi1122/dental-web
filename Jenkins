pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {
  
    stage('Build') {
      steps {
            sh 'npm install'
            sh 'npm install pm2 -g'
      }
    }
    
    stage('Run') {
      steps {
            sh 'pm2 kill'
            sh "export BUILD_ID=$BUILD_ID"
            sh 'JENKINS_NODE_COOKIE=dontKillMe npm run start'
            sh "pm2 list"
      }
  }
}
}
