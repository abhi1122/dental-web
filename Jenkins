pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {
  
    stage('Build') {
      steps {
        dir("backend") {
            sh 'npm install'
            sh 'npm install pm2 -g'
        }  
      }
    }
    
    stage('Run') {
      steps {
        dir("backend") {
             sh 'pm2 kill'
            sh "BUILD_ID=dontKillMe pm2 start ./bin/www"
            sh 'pm2 list'
            sh 'pm2 ping'
        }  
      }
    }

  }
}
