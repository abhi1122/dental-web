pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {
  
    stage('Build') {
      steps {
            sh 'npm install'
            sh 'npm install pm2 -g'
      }
    }
    
    stage('Run') {
      steps {
             sh 'pm2 kill'
            sh "BUILD_ID=dontKillMe npm start ./bin/www"
            sh 'pm2 list'
            sh 'pm2 ping'
      }
    }

  }
}
